    "@type": "Organization",
    "name": "Vireonix Technologies LLC",
    "url": "https://vireonixtech.com"
  },
  "reviewRating": {
    "@type": "Rating",
    "ratingValue": testimonial.rating,
    "bestRating": 5,
    "worstRating": 1
  },
  "author": {
    "@type": "Person",
    "name": testimonial.name,
    "jobTitle": testimonial.jobTitle,
    "worksFor": {
      "@type": "Organization",
      "name": testimonial.company
    }
  },
