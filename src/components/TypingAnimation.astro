<style>
  /* ===== TYPING ANIMATION STYLES ===== */
  
  .typing-text {
    /* Ensure consistent spacing for text changes */
    display: inline-block;
    min-width: 200px;
    text-align: left;
  }
  
  /* Cursor Animation */
  .cursor {
    display: inline-block;
    background-color: currentColor;
    margin-left: 2px;
    width: 3px;
    animation: blink 1s infinite;
  }
  
  /* Blinking cursor keyframes */
  @keyframes blink {
    0%, 50% {
      opacity: 1;
    }
    51%, 100% {
      opacity: 0;
    }
  }
  
  /* Typing animation class for smooth character appearance */
  .typing {
    overflow: hidden;
    white-space: nowrap;
  }
  
  /* Responsive text sizing */
  @media (max-width: 768px) {
    .typing-text {
      min-width: 150px;
    }
  }
  
  @media (max-width: 480px) {
    .typing-text {
      min-width: 120px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // ===== TYPING ANIMATION CONFIGURATION =====
    
    // Array of words/phrases to cycle through
    const words = [
      'Technology Partner',
      'Development Team',
      'Innovation Catalyst',
      'Digital Architect',
      'Solution Provider'
    ];
    
    // Animation timing configuration
    const config = {
      typeSpeed: 100,        // Speed of typing (milliseconds per character)
      deleteSpeed: 50,       // Speed of deleting (milliseconds per character)
      pauseTime: 2000,       // Pause time after completing a word (milliseconds)
      deleteDelay: 1000      // Delay before starting to delete (milliseconds)
    };
    
    // Get DOM elements
    const typedTextElement = document.getElementById('typed-text');
    const cursorElement = document.getElementById('cursor');
    
    // Animation state variables
    let currentWordIndex = 0;
    let currentCharIndex = 0;
    let isDeleting = false;
    let isWaiting = false;
    
    // ===== MAIN TYPING ANIMATION FUNCTION =====
    function typeAnimation() {
      // Get current word to type
      const currentWord = words[currentWordIndex];
      
      // Handle typing phase
      if (!isDeleting && !isWaiting) {
        // Add next character
        if (currentCharIndex < currentWord.length) {
          typedTextElement.textContent = currentWord.substring(0, currentCharIndex + 1);
          currentCharIndex++;
          setTimeout(typeAnimation, config.typeSpeed);
        } else {
          // Word is complete, start waiting phase
          isWaiting = true;
          setTimeout(() => {
            isWaiting = false;
            isDeleting = true;
            typeAnimation();
          }, config.pauseTime);
        }
      }
      // Handle deleting phase
      else if (isDeleting && !isWaiting) {
        // Remove last character
        if (currentCharIndex > 0) {
          typedTextElement.textContent = currentWord.substring(0, currentCharIndex - 1);
          currentCharIndex--;
          setTimeout(typeAnimation, config.deleteSpeed);
        } else {
          // Word is fully deleted, move to next word
          isDeleting = false;
          currentWordIndex = (currentWordIndex + 1) % words.length;
          
          // Small delay before starting next word
          setTimeout(typeAnimation, config.deleteDelay);
        }
      }
    }
    
    // ===== CURSOR MANAGEMENT =====
    function manageCursor() {
      // Show cursor during typing and deleting
      if (cursorElement) {
        cursorElement.style.display = 'inline-block';
      }
    }
    
    // ===== RESPONSIVE BEHAVIOR =====
    function handleResize() {
      // Adjust typing speed based on screen size for better mobile experience
      const isMobile = window.innerWidth < 768;
      if (isMobile) {
        config.typeSpeed = 120;  // Slightly slower on mobile
        config.deleteSpeed = 60;
      } else {
        config.typeSpeed = 100;  // Normal speed on desktop
        config.deleteSpeed = 50;
      }
    }
    
    // ===== INITIALIZATION =====
    function initializeTypingAnimation() {
      // Ensure elements exist before starting
      if (!typedTextElement || !cursorElement) {
        console.error('Typing animation elements not found');
        return;
      }
      
      // Set initial state
      typedTextElement.textContent = '';
      manageCursor();
      handleResize();
      
      // Start the animation with a small delay
      setTimeout(typeAnimation, 500);
    }
    
    // ===== EVENT LISTENERS =====
    
    // Handle window resize for responsive behavior
    window.addEventListener('resize', handleResize);
    
    // Handle visibility change to pause/resume animation when tab is not visible
    document.addEventListener('visibilitychange', function() {
      if (document.hidden) {
        // Pause animation when tab is not visible (optional optimization)
        // You could implement pause/resume logic here if needed
      }
    });
    
    // ===== START ANIMATION =====
    initializeTypingAnimation();
    
    // ===== ACCESSIBILITY ENHANCEMENTS =====
    
    // Respect user's motion preferences
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)');
    
    if (prefersReducedMotion.matches) {
      // If user prefers reduced motion, show static text instead
      if (typedTextElement) {
        typedTextElement.textContent = words[0];
        if (cursorElement) {
          cursorElement.style.display = 'none';
        }
      }
    }
    
    // Listen for changes in motion preference
    prefersReducedMotion.addEventListener('change', function() {
      if (this.matches) {
        // Stop animation and show static text
        if (typedTextElement) {
          typedTextElement.textContent = words[0];
        }
        if (cursorElement) {
          cursorElement.style.display = 'none';
        }
      } else {
        // Restart animation
        initializeTypingAnimation();
      }
    });
  });
</script>