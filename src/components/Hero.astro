<section class="relative min-h-screen flex items-center justify-center bg-hero-gradient overflow-hidden pt-24">
  <!-- Animated Background -->
  <div class="absolute inset-0">
    <div class="particles-container"></div>
    <div class="absolute top-20 right-20 w-96 h-96 bg-accent/20 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-20 left-20 w-80 h-80 bg-secondary/20 rounded-full blur-3xl animate-float" style="animation-delay: -2s;"></div>
  </div>
  
  <!-- Glassmorphism Overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-white/10 via-transparent to-black/20 backdrop-blur-xs"></div>
  
  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 text-center">
    <div class="max-w-4xl mx-auto">
      <!-- Badge -->
      <div class="hero-animate inline-flex items-center px-4 py-2 rounded-full bg-white/10 backdrop-blur-md border border-white/20 text-white/90 text-sm font-medium mb-8">
        <span class="w-2 h-2 bg-accent rounded-full mr-2 animate-pulse"></span>
        Trusted by 300+ Enterprise Clients
      </div>

      <!-- Main Headline -->
      <h1 class="hero-animate text-5xl md:text-7xl lg:text-8xl font-montserrat font-extrabold text-white mb-6 leading-tight">
        Innovative Technology.<br>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent via-cyan-300 to-secondary animate-gradient-text">
          Timeless Expertise.
        </span>
      </h1>

      <!-- Subheadline -->
      <p class="hero-animate text-xl md:text-2xl text-white/80 mb-12 max-w-3xl mx-auto leading-relaxed">
        We deliver secure, scalable technology solutions that transform businesses and drive growth.
        25+ years of excellence in enterprise innovation.
      </p>

      <!-- CTA Buttons -->
      <div class="hero-animate flex flex-col sm:flex-row gap-6 justify-center items-center">
        <a href="#contact" class="group bg-button-gradient text-white px-8 py-4 rounded-full font-semibold text-lg hover:shadow-2xl hover:scale-105 transition-all duration-300 btn-shine flex items-center gap-2">
          Start Your Project
          <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href="#services" class="bg-white/10 backdrop-blur-md border border-white/20 text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-white/20 hover:border-white/40 transition-all duration-300">
          Explore Services
        </a>
      </div>

      <!-- Trust Indicators -->
      <div class="hero-animate mt-16 flex flex-wrap justify-center items-center gap-8 text-white/60">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>ISO 27001 Certified</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>24/7 Support</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>99.9% Uptime</span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- 3D Globe Visual -->
  <div class="absolute right-0 top-1/2 transform -translate-y-1/2 w-96 h-96 opacity-30 hidden lg:block">
    <div class="globe-container w-full h-full rounded-full border border-accent/30 animate-float">
      <div class="absolute inset-4 rounded-full border border-accent/20 animate-float" style="animation-delay: -1s;"></div>
      <div class="absolute inset-8 rounded-full border border-accent/10 animate-float" style="animation-delay: -2s;"></div>
    </div>
  </div>
</section>

<style>
  .particles-container {
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(2px 2px at 20px 30px, rgba(6, 182, 212, 0.3), transparent),
      radial-gradient(2px 2px at 40px 70px, rgba(147, 51, 234, 0.3), transparent),
      radial-gradient(1px 1px at 90px 40px, rgba(6, 182, 212, 0.5), transparent),
      radial-gradient(1px 1px at 130px 80px, rgba(147, 51, 234, 0.5), transparent);
    background-repeat: repeat;
    background-size: 150px 100px;
    animation: particles 20s linear infinite;
  }
  
  @keyframes particles {
    0% { background-position: 0 0, 0 0, 0 0, 0 0; }
    100% { background-position: 150px 100px, -150px 100px, 150px -100px, -150px -100px; }
  }
</style>