<style>
/* ===== FLOATING FOOTER STYLES ===== */

.floating-footer {
  /* Fixed positioning to stay at bottom of viewport */
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000; /* High z-index to stay above other content */
  
  /* Centering and layout */
  display: flex;
  justify-content: center;
  align-items: center;
  
  /* Visual styling */
  background: rgba(15, 23, 42, 0.95); /* Semi-transparent dark background */
  backdrop-filter: blur(10px); /* Blur effect for modern look */
  border-top: 1px solid rgba(255, 255, 255, 0.1); /* Subtle top border */
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.15); /* Subtle shadow above */
  
  /* Spacing */
  padding: 12px 20px;
  min-height: 60px;
}

.floating-footer-container {
  /* Container for footer content */
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  max-width: 1200px; /* Maximum width for large screens */
  margin: 0 auto; /* Center the container */
  gap: 20px;
}

/* ===== FOOTER SECTIONS ===== */

.footer-section {
  display: flex;
  align-items: center;
  flex: 1;
}

.footer-left {
  justify-content: flex-start;
}

.footer-center {
  justify-content: center;
}

.footer-right {
  justify-content: flex-end;
}

/* ===== COPYRIGHT STYLING ===== */

.copyright {
  color: rgba(255, 255, 255, 0.8);
  font-size: 14px;
  font-weight: 500;
  margin: 0;
  white-space: nowrap;
}

/* ===== NAVIGATION LINKS ===== */

.footer-nav {
  display: flex;
  align-items: center;
  gap: 8px;
}

.footer-link {
  color: rgba(255, 255, 255, 0.7);
  text-decoration: none;
  font-size: 14px;
  font-weight: 500;
  padding: 6px 12px;
  border-radius: 6px;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.footer-link:hover {
  color: #06b6d4; /* Accent color on hover */
  background: rgba(6, 182, 212, 0.1);
  transform: translateY(-1px);
}

.footer-divider {
  color: rgba(255, 255, 255, 0.3);
  font-size: 12px;
  margin: 0 4px;
}

/* ===== SOCIAL LINKS ===== */

.social-links {
  display: flex;
  gap: 12px;
  align-items: center;
}

.social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  color: rgba(255, 255, 255, 0.7);
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  text-decoration: none;
  transition: all 0.3s ease;
}

.social-link:hover {
  color: #06b6d4;
  background: rgba(6, 182, 212, 0.1);
  border-color: rgba(6, 182, 212, 0.3);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(6, 182, 212, 0.2);
}

/* ===== RESPONSIVE DESIGN ===== */

/* Tablet and smaller screens */
@media (max-width: 768px) {
  .floating-footer {
    padding: 10px 16px;
    min-height: 50px;
  }
  
  .floating-footer-container {
    gap: 12px;
  }
  
  .footer-center {
    /* Hide center section on mobile to save space */
    display: none;
  }
  
  .footer-left,
  .footer-right {
    flex: 1;
  }
  
  .copyright {
    font-size: 12px;
  }
  
  .social-links {
    gap: 8px;
  }
  
  .social-link {
    width: 28px;
    height: 28px;
  }
}

/* Mobile phones */
@media (max-width: 480px) {
  .floating-footer {
    padding: 8px 12px;
    min-height: 45px;
  }
  
  .floating-footer-container {
    flex-direction: column;
    gap: 8px;
    text-align: center;
  }
  
  .footer-section {
    justify-content: center;
    flex: none;
  }
  
  .footer-center {
    /* Show simplified nav on mobile */
    display: flex;
  }
  
  .footer-nav {
    gap: 4px;
  }
  
  .footer-link {
    padding: 4px 8px;
    font-size: 12px;
  }
  
  .footer-divider {
    margin: 0 2px;
  }
  
  .copyright {
    font-size: 11px;
  }
  
  .social-links {
    gap: 6px;
  }
  
  .social-link {
    width: 24px;
    height: 24px;
  }
  
  .social-link svg {
    width: 12px;
    height: 12px;
  }
}

/* Large screens - prevent footer from being too wide */
@media (min-width: 1400px) {
  .floating-footer-container {
    max-width: 1400px;
  }
}

/* ===== ACCESSIBILITY IMPROVEMENTS ===== */

/* Focus styles for keyboard navigation */
.footer-link:focus,
.social-link:focus {
  outline: 2px solid #06b6d4;
  outline-offset: 2px;
}

/* Reduced motion for users who prefer it */
@media (prefers-reduced-motion: reduce) {
  .footer-link,
  .social-link {
    transition: none;
  }
  
  .footer-link:hover,
  .social-link:hover {
    transform: none;
  }
}

/* High contrast mode support */
@media (prefers-contrast: high) {
  .floating-footer {
    background: rgba(0, 0, 0, 0.95);
    border-top: 2px solid #ffffff;
  }
  
  .copyright,
  .footer-link,
  .social-link {
    color: #ffffff;
  }
  
  .footer-divider {
    color: #ffffff;
  }
}
</style>