---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const featuredResources = [
  {
    type: "Whitepaper",
    title: "Enterprise AI Implementation Guide 2025",
    description: "A comprehensive guide to implementing generative AI in enterprise environments. Learn best practices, security considerations, and ROI frameworks.",
    image: "/images/resources/ai-guide.jpg",
    downloadUrl: "#",
    pages: 45,
    readTime: "25 min read"
  },
  {
    type: "E-Book",
    title: "Cloud Migration Playbook",
    description: "Step-by-step strategies for successful cloud migration. Includes assessment checklists, risk mitigation strategies, and real-world case studies.",
    image: "/images/resources/cloud-playbook.jpg",
    downloadUrl: "#",
    pages: 68,
    readTime: "35 min read"
  }
];

const resources = [
  {
    category: "Whitepapers",
    items: [
      {
        title: "Salesforce ROI Maximization Strategies",
        description: "Learn how to maximize your Salesforce investment with proven optimization techniques.",
        type: "PDF",
        pages: 24
      },
      {
