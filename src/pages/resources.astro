const webinars = [
  {
    title: "Introduction to Generative AI for Enterprise",
    description: "Learn how generative AI is transforming enterprise operations and how to get started.",
    duration: "45 min",
    presenter: "Sarah Chen, AI Practice Lead"
  },
  {
    title: "Salesforce Lightning Migration Best Practices",
    description: "Step-by-step guide to migrating from Salesforce Classic to Lightning Experience.",
    duration: "60 min",
    presenter: "Michael Rodriguez, Salesforce Architect"
  },
  {
    title: "Building Secure Cloud Architectures",
    description: "Security-first approaches to designing and implementing cloud infrastructure.",
    duration: "50 min",
    presenter: "David Kim, Cloud Security Lead"
  },
  {
    title: "Mobile App Development: Native vs Cross-Platform",
    description: "Comparing development approaches and when to use each for your projects.",
    duration: "40 min",
    presenter: "Emily Watson, Mobile Engineering Director"
  }
