---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const posts = [
  {
    slug: 'guide-to-generative-ai-enterprise',
    title: 'The Complete Guide to Generative AI for Enterprise',
    description: 'Learn how generative AI is transforming business operations, from customer service automation to content generation and beyond.',
    category: 'Generative AI',
    author: 'Dr. Michael Roberts',
    date: '2025-01-08',
    readTime: '12 min',
    featured: true
  },
  {
    slug: 'cloud-migration-strategy-2025',
    title: 'Cloud Migration Strategy: A 2025 Playbook',
    description: 'A comprehensive guide to planning and executing successful cloud migrations with zero downtime and maximum ROI.',
    category: 'Cloud Migration',
    author: 'Priya Patel',
    date: '2025-01-05',
    readTime: '10 min',
    featured: true
  },
  {
    slug: 'react-vs-angular-2025',
    title: 'React vs Angular in 2025: Which Framework to Choose?',
    description: 'An in-depth comparison of React and Angular for enterprise web development, with recommendations based on project requirements.',
    category: 'Web Development',
    author: 'Arun Kumar',
    date: '2025-01-02',
    readTime: '8 min',
    featured: false
  },
  {
    slug: 'salesforce-implementation-best-practices',
    title: 'Salesforce Implementation Best Practices for 2025',
    description: 'Expert tips for successful Salesforce implementations, from planning and data migration to user adoption and optimization.',
    category: 'Salesforce',
    author: 'Jennifer Martinez',
    date: '2024-12-28',
    readTime: '9 min',
    featured: false
  },
  {
    slug: 'mobile-app-security-checklist',
    title: 'Mobile App Security Checklist: 15 Essential Measures',
    description: 'Protect your mobile application with this comprehensive security checklist covering authentication, data protection, and compliance.',
    category: 'Cybersecurity',
    author: 'David Chen',
    date: '2024-12-22',
    readTime: '7 min',
    featured: false
  },
  {
    slug: 'ux-design-trends-2025',
    title: 'UX Design Trends That Will Dominate 2025',
    description: 'From AI-powered personalization to immersive experiences, discover the UX design trends shaping digital products this year.',
    category: 'UI/UX Design',
    author: 'Sarah Williams',
    date: '2024-12-18',
    readTime: '6 min',
    featured: false
  }
];

const featuredPosts = posts.filter(p => p.featured);
const regularPosts = posts.filter(p => !p.featured);

// Blog page schema
const blogSchema = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Vireonix Technologies Blog",
  "description": "Expert insights on web development, mobile apps, cloud migration, AI, and enterprise technology solutions.",
  "url": "https://vireonixtech.com/blog",
  "publisher": {
    "@type": "Organization",
    "name": "Vireonix Technologies LLC",
    "logo": {
      "@type": "ImageObject",
      "url": "https://vireonixtech.com/Untitled design.png"
    }
  }
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://vireonixtech.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Blog"
    }
  ]
};
---

<Layout
  title="Blog | Technology Insights & Best Practices | Vireonix Technologies"
  description="Expert insights on web development, mobile apps, cloud migration, generative AI, Salesforce, and enterprise technology solutions from Vireonix Technologies."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-16 bg-gradient-to-br from-primary to-accent">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 text-center">
        <!-- Breadcrumb -->
        <nav class="flex justify-center items-center gap-2 text-sm text-white/70 mb-8">
          <a href="/" class="hover:text-white">Home</a>
          <span>/</span>
          <span class="text-white">Blog</span>
        </nav>

        <h1 class="text-4xl md:text-6xl font-montserrat font-extrabold text-white mb-6">
          Technology Insights
        </h1>
        <p class="text-xl text-white/90 max-w-3xl mx-auto">
          Expert perspectives on software development, cloud computing, AI, and digital transformation from our team of technology leaders.
        </p>
      </div>
    </section>

    <!-- Featured Posts -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">Featured Articles</h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {featuredPosts.map(post => (
            <a href={`/blog/${post.slug}`} class="group bg-gradient-to-br from-gray-50 to-white border border-gray-100 rounded-2xl overflow-hidden hover:shadow-xl transition-all duration-300">
              <div class="aspect-video bg-gradient-to-br from-primary/10 to-accent/10 flex items-center justify-center">
                <span class="text-6xl opacity-50 group-hover:opacity-70 transition-opacity">
                  {post.category === 'Generative AI' ? 'ü§ñ' : '‚òÅÔ∏è'}
                </span>
              </div>
              <div class="p-8">
                <div class="flex items-center gap-3 mb-4">
                  <span class="px-3 py-1 bg-primary/10 text-primary text-sm font-medium rounded-full">
                    {post.category}
                  </span>
                  <span class="text-gray-500 text-sm">{post.readTime} read</span>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors">
                  {post.title}
                </h3>
                <p class="text-gray-600 mb-4">{post.description}</p>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-500">{post.author}</span>
                  <span class="text-sm text-gray-500">{new Date(post.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- All Posts -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">Latest Articles</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {regularPosts.map(post => (
            <a href={`/blog/${post.slug}`} class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300">
              <div class="aspect-video bg-gradient-to-br from-gray-100 to-gray-50 flex items-center justify-center">
                <span class="text-4xl opacity-30 group-hover:opacity-50 transition-opacity">
                  {post.category === 'Web Development' ? 'üíª' :
                   post.category === 'Salesforce' ? '‚òÅÔ∏è' :
                   post.category === 'Cybersecurity' ? 'üîí' : 'üé®'}
                </span>
              </div>
              <div class="p-6">
                <div class="flex items-center gap-3 mb-3">
                  <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs font-medium rounded-full">
                    {post.category}
                  </span>
                  <span class="text-gray-400 text-xs">{post.readTime}</span>
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-primary transition-colors line-clamp-2">
                  {post.title}
                </h3>
                <p class="text-gray-600 text-sm mb-4 line-clamp-2">{post.description}</p>
                <div class="flex items-center justify-between text-xs text-gray-500">
                  <span>{post.author}</span>
                  <span>{new Date(post.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Newsletter CTA -->
    <section class="py-20 bg-gradient-to-br from-primary to-accent">
      <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Stay Updated with Tech Insights
        </h2>
        <p class="text-xl text-white/90 mb-8">
          Get the latest articles, tutorials, and industry insights delivered to your inbox.
        </p>
        <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input
            type="email"
            placeholder="Enter your email"
            class="flex-1 px-6 py-4 rounded-full text-gray-900 focus:outline-none focus:ring-2 focus:ring-white"
          />
          <button type="submit" class="bg-white text-primary px-8 py-4 rounded-full font-semibold hover:shadow-lg transition-all duration-300">
            Subscribe
          </button>
        </form>
        <p class="text-white/70 text-sm mt-4">No spam. Unsubscribe anytime.</p>
      </div>
    </section>
  </main>
  <Footer />

  <script type="application/ld+json" set:html={JSON.stringify(blogSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
