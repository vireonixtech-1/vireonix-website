---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import TypingAnimation from '../components/TypingAnimation.astro';
import Metrics from '../components/Metrics.astro';
import LogoCloud from '../components/LogoCloud.astro';
import Services from '../components/Services.astro';
import WhyChooseUs from '../components/WhyChooseUs.astro';
import Portfolio from '../components/Portfolio.astro';
import Testimonials from '../components/Testimonials.astro';
import FAQ from '../components/FAQ.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import BackToTop from '../components/BackToTop.astro';
---

<Layout>
  <Header />
  <main>
    <Hero />
    <TypingAnimation />
    <Metrics />
    <LogoCloud />
    <Services />
    <WhyChooseUs />
    <Portfolio />
    <Testimonials />
    <FAQ />
    <Contact />
  </main>
  <Footer />
  <BackToTop />
</Layout>

<style>
  main {
    position: relative;
    z-index: 1;
  }
</style>