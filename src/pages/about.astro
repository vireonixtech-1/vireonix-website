    <!-- Company Culture -->
    <section class="py-20 bg-dark relative overflow-hidden">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-montserrat font-extrabold text-white mb-4">
            Our Culture
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto">
            Building a workplace where innovation thrives and people grow
          </p>
        </div>
        
        <!-- Culture Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Innovation -->
          <div class="text-center">
            <div class="w-16 h-16 bg-primary/20 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Innovation First</h3>
            <p class="text-gray-300 text-sm">
              Encouraging creative thinking and breakthrough solutions
            </p>
          </div>
          
          <!-- Collaboration -->
          <div class="text-center">
            <div class="w-16 h-16 bg-accent/20 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Team Collaboration</h3>
            <p class="text-gray-300 text-sm">
              Working together to achieve extraordinary results
            </p>
          </div>
          
          <!-- Growth -->
          <div class="text-center">
            <div class="w-16 h-16 bg-secondary/20 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-secondary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Continuous Growth</h3>
            <p class="text-gray-300 text-sm">
              Investing in learning and professional development
            </p>
          </div>
          
          <!-- Excellence -->
          <div class="text-center">
