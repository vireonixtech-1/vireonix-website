---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const industries = [
  {
    slug: 'healthcare',
    name: 'Healthcare',
    icon: 'üè•',
    description: 'HIPAA-compliant solutions for healthcare providers, payers, and life sciences companies.',
    services: ['EHR Integration', 'Telehealth', 'AI Diagnostics', 'Claims Processing'],
    stats: { clients: '50+', compliance: 'HIPAA' }
  },
  {
    slug: 'financial-services',
    name: 'Financial Services',
    icon: 'üí∞',
    description: 'Secure, compliant solutions for banks, insurance companies, and fintech startups.',
    services: ['Core Banking', 'Fraud Detection', 'RegTech', 'Digital Banking'],
    stats: { clients: '40+', compliance: 'PCI-DSS, SOX' }
  },
  {
    slug: 'retail-ecommerce',
    name: 'Retail & E-Commerce',
    icon: 'üõí',
    description: 'Scalable commerce solutions that drive revenue and enhance customer experiences.',
    services: ['E-Commerce Platforms', 'POS Systems', 'Inventory Management', 'Personalization'],
    stats: { clients: '75+', transactions: '$500M+' }
  },
  {
    slug: 'manufacturing',
    name: 'Manufacturing',
    icon: 'üè≠',
    description: 'Industry 4.0 solutions connecting shop floor to top floor.',
    services: ['IoT Integration', 'Supply Chain', 'Quality Management', 'Predictive Maintenance'],
    stats: { clients: '30+', efficiency: '+35%' }
  },
  {
    slug: 'technology',
    name: 'Technology & SaaS',
    icon: 'üíª',
    description: 'Helping tech companies scale products and operations efficiently.',
    services: ['Product Development', 'Cloud Architecture', 'DevOps', 'AI/ML Integration'],
    stats: { clients: '100+', products: '200+' }
  },
  {
    slug: 'education',
    name: 'Education',
    icon: 'üéì',
    description: 'EdTech solutions for schools, universities, and online learning platforms.',
    services: ['LMS Development', 'Virtual Classrooms', 'Student Portals', 'Analytics'],
    stats: { clients: '25+', students: '1M+' }
  }
];

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://vireonixtech.com" },
    { "@type": "ListItem", "position": 2, "name": "Industries" }
  ]
};
---

<Layout
  title="Industries We Serve | Healthcare, Finance, Retail | Vireonix Technologies"
  description="Industry-specific technology solutions for healthcare, financial services, retail, manufacturing, and more. Compliance-ready, scalable enterprise software."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-16 bg-gradient-to-br from-primary to-secondary text-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 text-center">
        <nav class="flex justify-center items-center gap-2 text-sm text-white/60 mb-8">
          <a href="/" class="hover:text-white">Home</a>
          <span>/</span>
          <span class="text-white">Industries</span>
        </nav>

        <h1 class="text-4xl md:text-6xl font-montserrat font-extrabold mb-6">
          Industries We Serve
        </h1>
        <p class="text-xl text-white/90 max-w-3xl mx-auto">
          Deep domain expertise combined with cutting-edge technology. We understand your industry's unique challenges and compliance requirements.
        </p>
      </div>
    </section>

    <!-- Industries Grid -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {industries.map(industry => (
            <a href={`/industries/${industry.slug}`} class="group bg-white border border-gray-200 rounded-2xl p-8 hover:shadow-xl hover:border-primary/20 transition-all duration-300">
              <div class="text-5xl mb-6">{industry.icon}</div>
              <h2 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors">
                {industry.name}
              </h2>
              <p class="text-gray-600 mb-6">{industry.description}</p>

              <div class="flex flex-wrap gap-2 mb-6">
                {industry.services.slice(0, 3).map(service => (
                  <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded-full">
                    {service}
                  </span>
                ))}
              </div>

              <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                <div class="text-sm text-gray-500">
                  <span class="font-semibold text-gray-900">{industry.stats.clients}</span> Clients
                </div>
                <span class="text-primary font-semibold inline-flex items-center gap-1 group-hover:gap-2 transition-all">
                  Learn More
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" /></svg>
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Why Industry Expertise Matters -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-montserrat font-extrabold text-gray-900 mb-4">
            Why Industry Expertise Matters
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Generic solutions don't solve industry-specific challenges
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white p-8 rounded-2xl shadow-sm">
            <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-7 h-7 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Regulatory Compliance</h3>
            <p class="text-gray-600">We build compliance into solutions from day one‚ÄîHIPAA, PCI-DSS, SOX, GDPR, and industry-specific regulations.</p>
          </div>

          <div class="bg-white p-8 rounded-2xl shadow-sm">
            <div class="w-14 h-14 bg-accent/10 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-7 h-7 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Domain Knowledge</h3>
            <p class="text-gray-600">Our consultants speak your language. They understand industry workflows, terminology, and best practices.</p>
          </div>

          <div class="bg-white p-8 rounded-2xl shadow-sm">
            <div class="w-14 h-14 bg-secondary/10 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-7 h-7 text-secondary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Faster Time to Value</h3>
            <p class="text-gray-600">Pre-built accelerators and proven patterns for your industry reduce implementation time and risk.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-br from-primary to-accent text-white">
      <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Don't See Your Industry?
        </h2>
        <p class="text-xl text-white/90 mb-8">
          We work across many sectors. Let's discuss your specific needs.
        </p>
        <a href="/#contact" class="bg-white text-primary px-8 py-4 rounded-full font-semibold text-lg hover:shadow-lg hover:scale-105 transition-all duration-300 inline-flex items-center gap-2">
          Talk to an Expert
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </section>
  </main>
  <Footer />

  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
</Layout>
