---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://vireonixtech.com" },
    { "@type": "ListItem", "position": 2, "name": "Industries", "item": "https://vireonixtech.com/industries" },
    { "@type": "ListItem", "position": 3, "name": "Technology" }
  ]
};
---

<Layout
  title="Technology & SaaS Solutions | Product Development | Vireonix Technologies"
  description="Accelerate your technology product development. Custom SaaS platforms, API development, DevOps automation, and scalable cloud architecture for tech companies."
>
  <Header />
  <main>
    <!-- Hero Section -->
