---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://vireonixtech.com" },
    { "@type": "ListItem", "position": 2, "name": "Industries", "item": "https://vireonixtech.com/industries" },
    { "@type": "ListItem", "position": 3, "name": "Healthcare" }
  ]
};
---

<Layout
  title="Healthcare Technology Solutions | HIPAA Compliant | Vireonix Technologies"
  description="HIPAA-compliant healthcare IT solutions. EHR integration, telehealth platforms, AI diagnostics, claims processing automation. Trusted by 50+ healthcare organizations."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-20 bg-gradient-to-br from-primary to-secondary text-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <nav class="flex items-center gap-2 text-sm text-white/60 mb-8">
          <a href="/" class="hover:text-white">Home</a>
          <span>/</span>
          <a href="/industries" class="hover:text-white">Industries</a>
          <span>/</span>
          <span class="text-white">Healthcare</span>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <div class="text-6xl mb-6">üè•</div>
            <h1 class="text-4xl md:text-5xl font-montserrat font-extrabold mb-6">
              Healthcare Technology Solutions
            </h1>
            <p class="text-xl text-white/90 mb-8">
              HIPAA-compliant solutions that improve patient outcomes, streamline operations, and reduce costs across the healthcare ecosystem.
            </p>
            <div class="flex flex-wrap gap-4">
              <a href="/#contact" class="bg-white text-primary px-8 py-4 rounded-full font-semibold hover:shadow-lg hover:scale-105 transition-all duration-300">
                Get Started
              </a>
              <a href="/case-studies/healthfirst-ai-document-processing" class="bg-white/10 border border-white/30 text-white px-8 py-4 rounded-full font-semibold hover:bg-white/20 transition-all duration-300">
                View Case Study
              </a>
            </div>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center">
              <div class="text-4xl font-bold mb-2">50+</div>
              <div class="text-white/80">Healthcare Clients</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center">
              <div class="text-4xl font-bold mb-2">100%</div>
              <div class="text-white/80">HIPAA Compliant</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center">
              <div class="text-4xl font-bold mb-2">15+</div>
              <div class="text-white/80">Years Experience</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center">
              <div class="text-4xl font-bold mb-2">5M+</div>
              <div class="text-white/80">Patients Served</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Solutions Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-montserrat font-extrabold text-gray-900 mb-4">
            Healthcare Solutions
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            End-to-end technology solutions for providers, payers, and life sciences
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-gray-50 rounded-2xl p-8">
            <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-7 h-7 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">EHR/EMR Integration</h3>
            <p class="text-gray-600 mb-4">Seamless integration with Epic, Cerner, Allscripts, and other major EHR systems. HL7 FHIR compliant APIs.</p>
            <ul class="text-sm text-gray-500 space-y-2">
              <li>‚Ä¢ Bi-directional data sync</li>
              <li>‚Ä¢ Custom workflow automation</li>
              <li>‚Ä¢ Patient portal development</li>
